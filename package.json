  "description": "A Phaser 3 Next.js project template that demonstrates Next.js with React communication and uses Vite for bundling.",
  "keywords": [
    "phaser",
    "phaser3",
    "next",
    "nextjs",
    "vite",
    "typescript"
  ],
  "homepage": "https://github.com/magicink/phaser-sandbox#readme",
  "bugs": {
    "url": "https://github.com/magicink/phaser-sandbox/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicink/phaser-sandbox.git"
  },
  "license": "MIT",
  "author": "Brandon Tom <magicink@gmail.com>",
  "scripts": {
    "build": "next build",
    "build-nolog": "next build",
    "dev": "next dev -p 8080",
    "dev-nolog": "next dev -p 8080",
